<script type="text/javascript">
var swiper;


$(document).ready(function(){
    initFontSize();

    swiper = new Swiper('.swiper-container', {
        scrollbar: '.swiper-scrollbar',
        direction: 'vertical',
        slidesPerView: 'auto',
        mousewheelControl: true,
        freeMode: true
    });

    //蒙层点击事件
    $("#mask").click(function(){
        $(".menu-child").hide();
        $(".menu-list").hide();
        $(".menu-more-list").hide();
        $(this).hide();
        $(".menu li").removeClass("active");
        $(".menu li").find(".icon").html("&#xe605;");
        $("body").css({"overflow":"auto", "height":"auto"})
    });

    //菜单点击事件
    $(".menu li").click(function(){
        var index = $(this).index(".menu li");
        var className = $(this).attr("class");
        $(".menu li").removeClass("active");
        $(".menu-list").hide();
        $(".menu li").find(".icon").html("&#xe605;");
        if(className == "active") {
            //收缩
            $(this).find(".icon").html("&#xe605;");
            $(".menu-list:eq("+index+")").hide();
            $("#mask").hide();
        } else {
            //展开
            $(this).addClass("active");
            $(this).find(".icon").html("&#xe604;");
            $(".menu-list:eq("+index+")").show();
            $("#mask").show();
            $("body").css({"overflow":"hidden", "height":"100%"})
        }

        if(index==2) {
            var childIndex = $(".area-menu .active").index(".area-menu li");
            var height = $(".area-menu").height();
            // console.log(height);
            $(".swiper-wrapper").css("height",height);
            // console.log(childIndex);
            $(".menu-child:eq("+childIndex+")").show();
            // swiper.slideTo(0,0);
            swiper.updateContainerSize();
            swiper.updateSlidesSize();
            swiper.updatePagination();
        } else if(index == 3) {
            $(".menu-more-list").show();
        }
        // console.log(index);
    });
    
    //选择 排序， 分类
    $(".menu-list .chooseLi").click(function(){
        var index = $(this).index(".menu-list li");
        var parent = $(this).parent();
        $(parent).find("li").removeClass("active");
        $(parent).find("li .icon").remove();

        $(this).append("<span class='icon'>&#xe606</span>");
        $(this).addClass("active");
        $("#mask").click();
    });

    // 选择 街道
    $(".menu-child li").click(function(){
        var index = $(this).index(".menu-child li");
        $(".menu-child li").removeClass("active");
        $(".menu-child li .icon").remove();

        $(this).append("<span class='icon'>&#xe606</span>");
        $(this).addClass("active");
        $("#mask").click();
    });

    //选择 地区
    $(".area-menu li").click(function(){
        var index = $(this).index(".area-menu li");
        $(".menu-child").hide();
        $(".menu-child:eq("+index+")").show();
        $(".area-menu li .icon").remove();
        $(".area-menu li").removeClass("active");
        $(this).addClass("active");
        $(this).append("<span class='icon'>&#xe60a;</span>");

        swiper.updateContainerSize();
        swiper.updateSlidesSize();
        swiper.updatePagination();
    });

    //选择 更多
    $(".menu-more-list .coupons-choose").click(function(){
        $(".menu-more-list .coupons-choose").removeClass("active");
        $(this).addClass("active");
        $("#mask").click();
    });
});

function initFontSize(){
    var clientWidth = document.body.clientWidth;
    $("html").css("font-size",clientWidth/640*625+"%");
    $("#page").css("display","block");
}

window.onresize = function(){
    initFontSize();
}

//回顶部
function toTop(){
    $("html,body").animate({scrollTop: '0px'}, 500);
}

</script>